<div class="container"> 
    <div class="row"> 
      <div class="col-sm-12 "> 
        <div class="blogs"> 
          <% @blogs.each do |p| %> 
          <div class="blog clearfix"> 
            <div class="blog-details"> 
              <span class="blog-title"><%= link_to p.title, p %></span> 

              <p class="creacion">Publicado por <%= p.user.email %> hace <%= time_ago_in_words(p.updated_at) %></p>
      

              <span class="blog-description"><%= p.body %></span> 
              <% if signed_in? && p.user == current_user %> 
                <div class="actions"> 
                  <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_blog_path(p) %> 
                  <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, p, method: :delete, data: { confirm: "¿Estás seguro de eliminar este producto?" } %> 
                </div> 
              <% end %> 
              <div class="blog-comments"> 
                  <span class="glyphicon glyphicon-comment"></span> 
                  <span class="comment-count"><%= p.comments.count %></span> 
              </div> 
            </div> 
          </div> 
          <% end %> 
        </div> 
      </div> 
    </div> 
</div> 